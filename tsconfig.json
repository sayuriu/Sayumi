{
	"compilerOptions": {
		"alwaysStrict":  true,
		"esModuleInterop": true,
		"lib": ["DOM", "ESNext"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"pretty": true,
		"resolveJsonModule": true,
		"target": "ESNext",
		"skipLibCheck": true,
		"sourceMap": true,
		"watch": true
	},
	"exclude": [
		"node_modules"
	]
}